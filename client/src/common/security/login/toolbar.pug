.login-toolbar

	.auth-user(ng-show='isAuthenticated()')
		.menu
			span.entypo.entypo-dot-3

		| {{ currentUser.contact.name.first +' '+currentUser.contact.name.last}} &nbsp;
		.welcome Welcome

	.current-section People & Organizations

	.navbar-toggle-btn
		a(ng-click='openMenu()')
			span.glyphicon.glyphicon-align-justify

	.auth
		#login.auth-status(ng-show='!isAuthenticated()', ng-click='login()')
			span(style='margin-right: 5px', translate='label.login')
			span.entypo.entypo-login

		#logout.auth-status(ng-show='isAuthenticated()', ng-click='logout()')
			//span(style='margin-right: 5px', translate='label.logout')
			span.entypo.entypo-logout
