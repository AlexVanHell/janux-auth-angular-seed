form.login-form(name='form', novalidate)

	.login-body

		img.logo(src='/img/janux_logo.png')
		.brand
			span.janux JANUX
		.brand
			span.crm CRM
		.brand
			hr.line

		.alert.alert-warning(ng-show='authReason') {{authReason}}
		.alert.alert-danger(ng-show='authError') {{authError}}
		//.alert.alert-info(translate='login.msg.enterCredentials')

		.login-lbl
			label(translate='label.username')
		input.login-field(name='login', ng-model='user.account.name', required, autofocus)

		.login-lbl
			label(translate='label.password')
		input.login-field(name="pass", type='password', ng-model='user.account.password', required)

		div.text-right
			a.forgot-pass(href="#") {{ "login.forgotPass" | translate }}

		.btn-login-cnt
			button.btn.btn-login(ng-click='login()', ng-disabled='form.$invalid', translate='label.login')

		hr.line

		div.text-center
			.copy &copy; {{ "login.copy" | translate }}


